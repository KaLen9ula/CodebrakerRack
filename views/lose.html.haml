%section#introduction
  .container
    .row.fill-viewport.align-items-center.justify-content-center
      .col-12.col-md-6
        .row
          .col-md-auto
            %h1.text-white.title.inline-block
              = I18n.t("title")
        .row
          .col.button
            %button.btn.btn-primary{:disabled => "disabled", :type => "button"}
              = I18n.t("level")
              = ':'
              %span.badge.badge-light
                = level(@game_manager.codebraker_game)
            %button.btn.btn-primary{:disabled => "disabled", :type => "button"}
              = I18n.t("attempts_left")
              = ':'
              %span.badge.badge-light
                = @game_manager.codebraker_game.user.attempts
                = '/'
                = total_amount(@game_manager.codebraker_game, :attempts)
            %button.btn.btn-primary{:disabled => "disabled", :type => "button"}
              = I18n.t("hints_left")
              = ':'
              %span.badge.badge-light
                = @game_manager.codebraker_game.user.hints
                = '/'
                = total_amount(@game_manager.codebraker_game, :hints)
        %hr.mb-4/
        .row
          .text-center
            .text-center
              %h3.text-white
                = I18n.t("loose", name: @game_manager.codebraker_game.user.name)
              %h4.text-white
                = I18n.t("code_was")
                %strong
                  = @game_manager.codebraker_game.code
            %img.img-fluid{:alt => "You lose the game.rb!", :src => "assets/images/lost.gif"}/
        %hr.mb-4/
        %a.btn.btn-primary.btn-lg{:href => AppConfig::ROOT_PATH, :role => "button"}
          = I18n.t("button.play_again")
        %a.btn.btn-success.btn-lg.float-right{:href => AppConfig::STATISTICS_PATH, :role => "button"}
          = I18n.t("button.statistics")
